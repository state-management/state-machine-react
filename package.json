{
  "name": "state-machine-react",
  "version": "1.0.0",
  "description": "React wrapper for simple-state-machine, provides fromStateMachine and useStateMachineDispatch hooks",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tests": {
      "import": "./dist/esm/tests/index.js",
      "require": "./dist/cjs/tests/index.js",
      "types": "./dist/esm/tests/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "clean": "rm -rf dist",
    "tsc-ver": "tsc -version"
  },
  "peerDependencies": {
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "jest": "^29.7.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "@types/jest": "^27.5.2",
    "simple-state-machine": "file:../simple-state-machine/simple-state-machine-1.0.0.tgz"
  }
}
